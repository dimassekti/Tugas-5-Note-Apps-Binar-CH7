<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/custom_bluetiga"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:src="@drawable/jett"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_width="250dp"
            android:layout_height="250dp"/>

        <TextView
            android:id="@+id/tv_detail_title"
            android:text="Judul"
            android:layout_gravity="center"
            android:textSize="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_detail_time"
            android:text="time"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:padding="20dp"
            android:id="@+id/tv_detail_content"
            android:justificationMode="inter_word"
            android:layout_marginVertical="30dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_marginVertical="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_detail_back"
                    android:layout_margin="15dp"
                    android:src="@drawable/icons8_back_30"
                    android:layout_width="26dp"
                    android:layout_height="26dp"/>

                <ImageView
                    android:id="@+id/iv_detail_edit"
                    android:layout_margin="15dp"
                    android:src="@drawable/ic_icons8_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/iv_detail_delete"
                    android:layout_margin="15dp"
                    android:src="@drawable/ic_icons8_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/iv_detail_share"
                    android:layout_margin="15dp"
                    android:src="@drawable/icons8_share_30"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>


            </LinearLayout>

        </RelativeLayout>



    </LinearLayout>



</LinearLayout>